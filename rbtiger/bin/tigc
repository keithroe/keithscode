#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/rbtiger'

class TigerCompiler

  def initialize filename
    @filename = filename
  end

  def run
    parse
    translate
  end

  def parse
    @ast = RBTiger::Parser.new.scan_file @filename
  end
  
  def translate 
    begin
      RBTiger::ASTNode.printGraph( @ast, File.open( File.basename( @filename, ".tig" ) + ".dot", "w" ) )
      RBTiger::ASTNode.translateProgram @ast
    rescue RBTiger::RBException => e
      puts e.message
      puts e.backtrace
    end
  end
end

exit if ARGV.empty?


#TODO: write optparser that takes verbose, print-ast, and other flags

filename = ARGV.shift
TigerCompiler.new( filename ).run

